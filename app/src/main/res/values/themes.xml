<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CalculatorApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.CalculatorApp" parent="Base.Theme.CalculatorApp" />

    <style name="EqualButton" parent="CommonButton">
        <item name="backgroundTint">@color/EqualColor</item>
    </style>

    <style name="AllClearButton" parent="CommonButton">
        <item name="backgroundTint">@color/AllClearColor</item>
    </style>

    <style name="operatorButton" parent="CommonButton">
        <item name="backgroundTint">@color/OperatorColor</item>
    </style>

    <style name="DigitButton" parent="CommonButton">
        <item name="backgroundTint">@color/DigitColor</item>
    </style>
    
    <style name="CommonButton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="cornerRadius">35dp</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>